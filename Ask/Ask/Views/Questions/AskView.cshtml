@model AskedQuestionVM
@{
}

<div class="row">
    <div class="col-8">
        <h3 class="m-2">Ask a question</h3>


        <div>

            <form method="post" asp-action="AskView">
                <div class="form-group mt-5 m-2">
                    <label asp-for="Title">Title</label>
                    <div><span asp-validation-for="Title" class="text-danger"></span></div>
                    <input class="form-control" asp-for="Title" placeholder="what is your question? be specific" />
                </div>

                <div class="form-group mt-5 m-2">
                    <label asp-for="Body">Body</label>
                    <div><span asp-validation-for="Body" class="text-danger"></span></div>
                    <textarea id="textarea" class="form-control" rows="8" asp-for="Body"></textarea>
                </div>
                <div class="form-group mt-5 m-2">
                    <label asp-for="TagIds">Tags</label>
                    <div><span asp-validation-for="TagIds" class="text-danger"></span></div>
                    <select asp-for="TagIds" class="selectpicker dropdown form-control border" data-dropup-auto="false" style="border:thin solid black" title="Select Tags" multiple data-live-search="true">
                        @foreach (var tag in Model.TagsList)
                        {

                            <option value="@tag.Id" data-content="<span class='badge badge-secondary'>@tag.Name</span>">@tag.Name</option>
                        }



                    </select>
                </div>
                <div class="form-group mt-5 m-2">
                    <button type="submit" class="btn btn-primary">Ask</button>
                </div>
            </form>
        </div>
    </div>
</div>